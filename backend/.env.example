# Postis API Credentials
POSTIS_BASE_URL=https://shipments.postisgate.com
POSTIS_USERNAME=your_postis_username
POSTIS_PASSWORD=your_postis_password

# Backend Security
JWT_SECRET=generate_a_random_string_here

# Database (default: local SQLite)
DATABASE_URL=sqlite:///./postis_pwa.db

# Supabase (example pooler connection string)
# Note: The pooler host varies by project/region. Copy the exact URL from Supabase Dashboard.
# DATABASE_URL=postgresql://postgres.<PROJECT_REF>:<DB_PASSWORD>@aws-0-<REGION>.pooler.supabase.com:6543/postgres

# Driver Management
GOOGLE_SHEETS_URL=https://docs.google.com/spreadsheets/d/YOUR_SHEET_ID/edit#gid=0

# Background Postis Sync (optional)
# Poll Postis v3 list and refresh changed shipments into the DB.
# Disabled by default.
AUTO_SYNC_POSTIS=0
AUTO_SYNC_POSTIS_INTERVAL_SECONDS=3600
AUTO_SYNC_POSTIS_PAGE_SIZE=100
AUTO_SYNC_POSTIS_CONCURRENCY=6
# AUTO_SYNC_POSTIS_MAX_AWBS_PER_RUN=500
AUTO_SYNC_POSTIS_INCLUDE_MISSING_RAW=0
AUTO_SYNC_POSTIS_STARTUP_JITTER_SECONDS=30
AUTO_SYNC_POSTIS_RUN_IMMEDIATELY=1
